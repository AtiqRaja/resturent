<% include ../partials/head.ejs %>

<% include ../partials/header.ejs %>


					<!--begin::Entry-->
	<div class="d-flex flex-column-fluid">
		<!--begin::Container-->
		<div class=" container ">
			<!--begin::Dashboard-->
<!--begin::Row-->
<div class="row">

	<div class="col-lg-8 col-xxl-7 order-1 order-xxl-1">
		<!--begin::List Widget 1-->
        <div class="card card-custom gutter-b example example-compact">
			<div class="card-header">
				<h3 class="card-title">
					Edit Table
				</h3>
				
			</div>
			<!--begin::Form-->
			<form class="form" method="POST" action="/tables/updateTable/<%= table._id %>/<%= table.table_id %>">
				<div class="card-body">
					<%- messages('message',locals) %>
					<div class="form-group">
						<label>Area Name</label>
						<input name="area_name" type="text" class="form-control form-control-solid" value="<%= table.area_name %>" required>
                    </div>
					<div class="form-group">
						<label>Table Name</label>
						<input name="table_name" type="text" class="form-control form-control-solid" value="<%= table.table_name %>" required>
                    </div>
                    <div class="form-group">
						<label># of Chairs</label>
						<input name="chairs" type="text" class="form-control form-control-solid" value="<%= table.chairs %>" required>
                    </div>

                    <div class="form-group">
						<label>Status</label>
						<input name="status" type="text" class="form-control form-control-solid" value="<%= table.status %>" required>
					</div>
                    <div class="form-group">
						<legend class="col-form-label col-sm-2 pt-0">Scan QR Code</legend>
						<div class="col-sm-10">
							<div class="form-check">
								<%if(qr != undefined){%> <div><img src="<%=qr%>" alt="" style="width:200px; height:200px;"> </div><%}%>                              
							</div>                    
						</div>
					</div>
                    <div class="form-group">
						<legend class="col-form-label col-sm-2 pt-0">Mobile View</legend>
						<div class="col-sm-10">
							<div class="form-check">
								<a href="<%- link %>" target="_blank"><%- link %></a>                              
							</div>                    
						</div>
					</div>
					
                    
				</div>
				<div class="card-footer">
					<button type="submit" class="btn btn-primary mr-2">Submit</button>
					<button type="reset" class="btn btn-secondary">Cancel</button>
				</div>
			</form>
			<!--end::Form-->
		</div>
<!--end::List Widget 1-->
	</div>


</div>
<!--end::Row-->

<!--end::Dashboard-->
		</div>
		<!--end::Container-->
	</div>
<!--end::Entry-->
				</div>
				<!--end::Content-->


<% include ../partials/footer.ejs %>

</html>
