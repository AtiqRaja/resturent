<% include ../partials/head.ejs %>
<% include ../partials/header.ejs %>
<link href="/../../../cms/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Child Categories</h6>
    </div>
    <div class="card-body">
            <%- messages('message', locals) %>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Title</th>
                      <th>Parent</th>
                      <th>Web Img</th>
                      <th>Bg Img</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Parent</th>
                        <th>Web Img</th>
                        <th>Bg Img</th>
                        <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>

                    <% cats.forEach((element, key) => { %>
                        <tr>
                            <td><%- key+1  %></td>
                            <td><%- element.title  %></td>
                            <td><%- element.p_title  %></td>
                            <td><%-  element.web_img == "" ? 'Not Available' : 'Available'  %></td>
                            <td><%-  element.bg_img == "" ? 'Not Available' : ('Available' - element.bg_img )   %></td>
                            <td><div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-secondary">Edit</button>

                                <% if(element.status == 'active'){ %>
                                  <a href="/admin/menu/status/ccat/deactive/<%- element._id  %>" class="btn btn-secondary">Deactive</a>
                                  <% }else{ %>
                                  <a href="/admin/menu/status/ccat/active/<%- element._id  %>" class="btn btn-secondary">Activate</a>
                                <% } %>   

                              </div>
                            </td>
                          </tr>
                        <% }); %>
                   
                  </tbody>
                </table>
              </div>
            
      
    </div>
  </div>

  <% include ../partials/footer.ejs %>
  
    <!-- Page level plugins -->
    <script src="/../../../cms/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/../../../cms/vendor/datatables/dataTables.bootstrap4.min.js"></script>
  
      <!-- Page level custom scripts -->
      <script src="/../../../cms/js/demo/datatables-demo.js"></script>
</body>

</html>
