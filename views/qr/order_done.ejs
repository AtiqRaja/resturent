<% include includes/header.ejs %>

<style>
 .cooking{
     width: 50%;
    margin-left: 25%;
    margin-top: 20% !IMPORTANT;
}
</style>

<% include includes/sidebar.ejs %>

        <!-- Page content  -->
        <div id="content">
            <!-- Header  -->
            <nav class="navbar navbar-expand-lg navbar-light bg-header">
              <div class="container-fluid">
                <button type="button" id="sidebarleftbutton" class="btn d-none">
                <i class="fas fa-align-left"></i>
                </button>
              
                <div class="logo">
                    <% if(typeof hotel_name != "undefined" ){ %>  <%= hotel_name %> <%  } %>
                </div>
                <button type="button" id="sidebarrightbutton" class="btn d-none">
                <i class="fas fa-search"></i>
                </button>
              </div>
            </nav>
            <!-- .Header  -->
            <!-- Content Wrap  -->
            <div class="content-wrap">
              
              
              <div class="list-section">
                <div class="wrap-list-rc">
                  <a href="/qr/<%= _src %>/<%= hotel_id %>/<%= src_id %>">
                    <div class="heading-page">
                        Menu
                        <div class="back-btn">
                        <div class="icon-back"><i class="fas fa-chevron-left"></i></div>
                        
                        </div>
                    </div>
                    </a>
                  
                  <div class="lrc-item">
                    <img class="cooking" src="/mobile/soup.svg">
                    <div class="container text-center">
                        <h5 class="mt-3">Your order # is: <%- order_id  %> and will be ready in <%- time %> Minutes!</h5>
                        <h4></h4>
                        
                    </div>
                
                  
                </div>
              </div>

              <form class="form" method="POST" action="/customer/add_customer/<%= hotel_id %>/<%= _src %>/<%= src_id %>">
                <br>
                <legend style="font-size: large; text-align: center;" class="col-form-label col-sm-2 pt-0"><strong>Give us Your Precious Info!</strong></legend>
                <div class="card-body">
                    <fieldset class="form-group">
                        <div class="row">
                            <legend style="text-align: center;" class="col-form-label col-sm-2 pt-0">Name</legend>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="name" name="name" placeholder="Enter Your Name">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <div class="row">
                            <legend style="text-align: center;" class="col-form-label col-sm-2 pt-0">Email</legend>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="email" name="email" placeholder="Enter Your Email">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <div class="row">
                            <legend style="text-align: center;" class="col-form-label col-sm-2 pt-0">Phone #</legend>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="phone" name="phone" placeholder="Enter Phone #">
                            </div>
                        </div>
                    </fieldset>                   
                </div>
                <div class="card-footer">
                  <button style="text-align: center;" class="btn btn-info btn-block" type="submit">Add Info</button>
                </div>
            </form>

            </div>

            
            <!-- .Content wrap  -->
            
          </div>
        <!-- .Page content  -->
<% include includes/footer.ejs %>

<script>
  window.onload = function() {

    // var mydate = new Date();
    // mydate.setTime(mydate.getTime() - 1);
    // document.cookie = "cart=; expires=" + mydate.toGMTString(); 

    document.cookie.split(";").forEach(function(c) { document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/"); });
  };
</script>



 
</html>